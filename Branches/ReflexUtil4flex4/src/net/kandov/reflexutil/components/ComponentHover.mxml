<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
	backgroundColor="#ff0000" backgroundAlpha="0.2"
	borderStyle="solid" borderColor="#ff0000" 
	initialize="hide()">
	
	<mx:Script>
		<![CDATA[
			import mx.core.UIComponent;
			
			import net.kandov.reflexutil.utils.ComponentUtil;
			
			protected var _active:Boolean = true;
			
			//--------------------------------------------------------------------------
			// interface
			//--------------------------------------------------------------------------
			
			public function show(component:DisplayObject):void {
				if(active) {
					visible = true;
					includeInLayout = true;
					
					var absolutePoint:Point = ComponentUtil.getAbsolutePosition(component);
					x = absolutePoint.x;
					y = absolutePoint.y;
					
					width = component.width;
					height = component.height;
				}
			}
			
			public function hide():void {
				visible = false;
				includeInLayout = false;
			}
			
			[Bindable (event="activeChanged")]
			public function get active():Boolean {
				return _active;
			}
			
			public function set active(value:Boolean):void {
				if(_active != value) {
				 	_active = value;
				 	if(value){
				 		
				 	} else {
				 		hide();
				 	}
				 	dispatchEvent(new Event('activeChanged'));
				}
			}
		]]>
	</mx:Script>
	
</mx:Canvas>